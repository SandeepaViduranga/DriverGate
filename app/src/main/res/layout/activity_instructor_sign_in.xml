<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_01"
    tools:context=".Instructor.instructor_sign_in">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/gps_iconpng"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instructor"
            android:textSize="30sp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/dark_grey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="50sp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/dark_grey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-25dp" />

        <TextView
            android:id="@+id/no_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Think safe, drive safe."
            android:textSize="15sp"
            android:fontFamily="@font/sf_pro_regular"
            android:textColor="@color/grey2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/instructor_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:textColorHint="@color/grey2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/grey2"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/instructor_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="15sp"
            android:textColorHint="@color/grey2"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/grey2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="-5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_regular"
                android:text="Forgot Password..?"
                android:textSize="14dp"
                android:layout_weight="3"
                android:textColor="@color/grey2"/>

            <TextView
                android:onClick="resetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:text="Reset Now"
                android:textSize="15dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="@color/grey2"/>

        </LinearLayout>

        <Button
            android:id="@+id/instructor_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:background="@drawable/button_light_orange"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/white"
            android:layout_marginBottom="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_regular"
                android:text="Don't have an account"
                android:textSize="14dp"
                android:textColor="@color/grey2"/>

            <TextView
                android:onClick="instructor_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_bold"
                android:text="Register"
                android:textSize="15dp"
                android:gravity="left"
                android:textColor="@color/dark_grey"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>