<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".multi_signin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

    <Button
        android:id="@+id/user_sign_in"
        android:onClick="multi_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in as a User"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/button_light_orange"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/dark_grey"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/ds_sign_in"
        android:onClick="multi_ds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in as a Driving School"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/button_light_orange"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/dark_grey"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/instructor_sign_in"
        android:onClick="multi_instructor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in as a Instructor"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:background="@drawable/button_light_orange"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/dark_grey"
        android:layout_marginBottom="35dp"/>

    </LinearLayout>

</RelativeLayout>