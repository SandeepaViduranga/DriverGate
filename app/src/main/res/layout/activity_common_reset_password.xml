<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_find_routes"
    tools:context=".reset_password">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/settings_iconpng"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="30sp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/dark_grey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="50sp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/dark_grey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-20dp" />

        <TextView
            android:id="@+id/no_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Think safe, drive safe."
            android:textSize="15sp"
            android:fontFamily="@font/sf_pro_regular"
            android:textColor="@color/dark_grey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the email associated with your account\nand we'll send an email with instructions to\nreset your password."
            android:textSize="18sp"
            android:fontFamily="@font/sf_pro_regular"
            android:textColor="@color/dark_grey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/reserpwemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textPersonName"
            android:textSize="17sp"
            android:textColorHint="@color/dark_grey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/dark_grey"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnresetpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Instructions"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/sf_pro_bold"
            android:textColor="@color/dark_grey"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>